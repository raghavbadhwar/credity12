{
  "name": "credity-monorepo",
  "version": "1.0.0",
  "description": "Credity Ecosystem Monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "npm run test:wallet && npm run test:issuer && npm run test:recruiter && npm run test:gateway && npm run test:mobile && npm run test:contracts && npm run test:trust-sdk",
    "test:wallet": "cd BlockWalletDigi && npm test",
    "test:issuer": "cd \"CredVerseIssuer 3\" && npm test",
    "test:recruiter": "cd CredVerseRecruiter && npm test",
    "test:gateway": "cd credverse-gateway && npm run test:proxy",
    "test:mobile": "cd apps/mobile && npm test",
    "test:contracts": "cd \"CredVerseIssuer 3/contracts\" && npm run analyze:static",
    "test:trust-sdk": "cd packages/trust-sdk && npm test",
    "test:sepolia-smoke": "cd CredVerseRecruiter && npm run test:sepolia-smoke",
    "lint": "npm run lint:wallet && npm run lint:issuer && npm run lint:recruiter && npm run lint:gateway && npm run lint:shared-auth",
    "lint:wallet": "cd BlockWalletDigi && npm run lint",
    "lint:issuer": "cd \"CredVerseIssuer 3\" && npm run lint",
    "lint:recruiter": "cd CredVerseRecruiter && npm run lint",
    "lint:gateway": "cd credverse-gateway && npm run lint",
    "lint:shared-auth": "cd packages/shared-auth && npm run lint",
    "lint:trust-sdk": "cd packages/trust-sdk && npm run lint",
    "check": "npm run check:shared-auth && npm run check:trust-sdk && npm run check:wallet && npm run check:issuer && npm run check:recruiter",
    "check:wallet": "cd BlockWalletDigi && npm run check",
    "check:issuer": "cd \"CredVerseIssuer 3\" && npm run check",
    "check:recruiter": "cd CredVerseRecruiter && npm run check",
    "check:shared-auth": "cd packages/shared-auth && npm run build",
    "check:trust-sdk": "cd packages/trust-sdk && npm run build",
    "prepare": "husky",
    "build": "node scripts/railway-service-dispatch.mjs build",
    "start": "node scripts/railway-service-dispatch.mjs start",
    "mobile:dev": "cd apps/mobile && npm run start",
    "mobile:android": "cd apps/mobile && npm run android",
    "mobile:ios": "cd apps/mobile && npm run ios",
    "mobile:web": "cd apps/mobile && npm run web",
    "gate:foundation": "node scripts/foundation-e2e-gate.mjs",
    "gate:foundation:local": "node scripts/gate-foundation-local.mjs",
    "gate:launch": "node scripts/launch-gate-check.mjs",
    "gate:launch:strict": "LAUNCH_GATE_STRICT=1 node scripts/launch-gate-check.mjs",
    "gate:nova:interop": "node scripts/gate-nova-interop.mjs",
    "gate:contracts:security": "cd \"CredVerseIssuer 3/contracts\" && npm run analyze:static",
    "gate:root-fix": "node scripts/gate-root-fix-discipline.mjs",
    "demo:local": "node scripts/demo-local.mjs",
    "perf:baseline": "node scripts/perf-baseline.mjs",
    "perf:baseline:report": "node scripts/perf-baseline-report.mjs",
    "db:safety:check": "node scripts/db-migration-safety-check.mjs",
    "aeos:sync-db": "python3 scripts/aeos_resilience_sync.py",
    "ci:evidence:pack": "node scripts/ci-evidence-pack.mjs",
    "zk:test": "cd zk && npm test",
    "zk:build": "cd zk && npm run build:circuits",
    "zk:prove": "cd zk && npm run prove"
  },
  "keywords": [
    "credential",
    "blockchain",
    "verification",
    "wallet"
  ],
  "author": "Raghav Badhwar",
  "license": "UNLICENSED",
  "dependencies": {
    "ogl": "^1.0.11",
    "pptxgenjs": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
