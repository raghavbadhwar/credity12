    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.19",
        "@types/express": "4.17.21",
        "@types/hpp": "^0.2.7",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^25.3.0",
        "@types/pg": "^8.16.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
